@model User

<h1>Register</h1>
<form action="register" method = "Post">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
        <span asp-validation-for = "FirstName" class = "text text-danger"></span>
    </div>
    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control">
        <span asp-validation-for = "LastName" class = "text text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control">
        <span asp-validation-for = "Email" class = "text text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input asp-for="Password" class="form-control">
        <span asp-validation-for = "Password" class = "text text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Confirm">Confirm Password</label>
        <input asp-for="Confirm" class="form-control">
        <span asp-validation-for = "Confirm" class = "text text-danger"></span>
    </div>
    <button type="submit" value = "register" class="btn btn-primary">Register</button>
</form>
