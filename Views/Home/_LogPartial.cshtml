@model LogUser

<h1>Login</h1>
<form action="login" method = "Post">
    <div class="form-group">
        <label for="LogEmail">Email</label>
        <input asp-for="LogEmail" class="form-control">
        <span asp-validation-for = "LogEmail" class = "text text-danger"></span>
    </div>
    <div class="form-group">
        <label for="LogPassword">Password</label>
        <input asp-for="LogPassword" class="form-control">
        <span asp-validation-for = "LogPassword" class = "text text-danger"></span>
    </div>
    <button type="submit" value = "Login" class="btn btn-primary">Login</button>
</form>